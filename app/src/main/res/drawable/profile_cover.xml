<?xml version="1.0" encoding="utf-8"?>
<!--<selector xmlns:android="http://schemas.android.com/apk/res/android">-->
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <item>
            <shape android:shape="rectangle">
                <gradient
                    android:startColor="#A9B5F0"
                    android:endColor="#CC8ED9"
                    android:angle="45" />
            </shape>
        </item>

        <!-- Semi-transparent circle overlay -->
        <item
            android:width="60dp"
            android:height="60dp"
            android:gravity="center_horizontal"
            android:top="40dp"
            android:bottom="80dp">
            <shape android:shape="oval">
                <solid android:color="#66FFFFFF" /> <!-- 40% white -->
            </shape>
        </item>

        <!-- Semi-transparent rectangle overlay -->
        <item
            android:width="200dp"
            android:height="50dp"
            android:gravity="center_horizontal|bottom"
            android:bottom="20dp">
            <shape android:shape="rectangle">
                <solid android:color="#55FFFFFF" /> <!-- 33% white -->
                <corners android:radius="8dp" />
            </shape>
        </item>

    </layer-list>

<!--</selector>-->